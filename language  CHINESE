                        <option value="30">30°</option>
                    </select>
                </div>
                
                <button class="calculate-btn" id="calculate">
                    <i class="fas fa-calculator"></i> 计算VR速度
                </button>
            </div>
            
            <div class="input-group">
                <h2><i class="fas fa-plane-departure"></i> 机型说明</h2>
                
                <div class="details">
                    <div><strong>737-600</strong> <span>典型座位: 110-132</span></div>
                    <div><strong>737-700</strong> <span>典型座位: 126-149</span></div>
                    <div><strong>737-800</strong> <span>典型座位: 162-189</span></div>
                    <div><strong>737 MAX 8</strong> <span>典型座位: 162-178</span></div>
                </div>
                
                <div style="margin-top: 20px; padding: 15px; background-color: #e8f4f8; border-radius: 8px;">
                    <h3 style="font-size: 1.1rem; color: #1a2980; margin-bottom: 10px;">计算原理</h3>
                    <p style="font-size: 0.9rem; color: #555;">
                        VR速度计算基于：
                        <br>1. 各机型满载基准VR速度
                        <br>2. 襟翼角度修正（襟翼越大，VR越小）
                        <br>3. 风速修正（逆风减少VR，顺风增加VR）
                        <br>4. 假设标准大气条件，跑道干燥
                    </p>
                </div>
            </div>
        </div>
        
        <div class="results-section">
            <h2><i class="fas fa-tachometer-alt"></i> 计算结果</h2>
            <div class="aircraft-grid" id="results">
                <!-- 结果将在这里动态生成 -->
            </div>
        </div>
    </div>
    
    <div class="footer">
        <p>© 2023 737 VR速度计算器 | 本工具仅用于培训和教育目的 | 实际飞行请参考官方飞行手册</p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 各机型的基准VR速度（满载，襟翼5°，无风条件）
            const baseVrSpeeds = {
                '737-600': { base: 138, weight: 65.5, units: '吨' },
                '737-700': { base: 142, weight: 70.1, units: '吨' },
                '737-800': { base: 146, weight: 79.0, units: '吨' },
                '737MAX8': { base: 144, weight: 82.2, units: '吨' }
            };
            
            // 襟翼修正系数（相对于襟翼5°）
            const flapCorrections = {
                1: 8,   // 襟翼1°时VR增加8节
                5: 0,   // 襟翼5°为基准
                10: -4, // 襟翼10°时VR减少4节
                15: -8,
                20: -12,
                25: -16,
                30: -20
            };
            
            // 风速修正系数（每节逆风减少0.1节VR，每节顺风增加0.1节VR）
            const windCorrectionFactor = 0.1;
            
            // 初始计算
            calculateVrSpeeds();
            
            // 为计算按钮添加事件监听
            document.getElementById('calculate').addEventListener('click', calculateVrSpeeds);
            
            // 为输入框添加输入事件监听，实现实时计算
            document.getElementById('wind').addEventListener('input', calculateVrSpeeds);
            document.getElementById('flap').addEventListener('change', calculateVrSpeeds);
            
            function calculateVrSpeeds() {
                // 获取用户输入
                const windInput = document.getElementById('wind');
                const wind = parseFloat(windInput.value) || 0;
                
                const flapSelect = document.getElementById('flap');
                const flap = parseInt(flapSelect.value);
                
                // 获取结果容器
                const resultsContainer = document.getElementById('results');
                resultsContainer.innerHTML = '';
                
                // 计算并显示每种机型的VR速度
                for (const [aircraft, data] of Object.entries(baseVrSpeeds)) {
                    // 基础VR速度
                    let vrSpeed = data.base;
                    
                    // 应用襟翼修正
                    vrSpeed += flapCorrections[flap];
                    
                    // 应用风速修正（逆风减少VR，顺风增加VR）
                    vrSpeed -= wind * windCorrectionFactor;
                    
                    // 确保VR速度不低于最小值
                    vrSpeed = Math.max(vrSpeed, data.base - 25);
                    
                    // 创建飞机卡片
                    const card = document.createElement('div');
                    card.className = 'aircraft-card';
                    
                    // 设置卡片内容
                    card.innerHTML = `
                        <h3>${aircraft}</h3>
                        <div class="vr-speed">${vrSpeed.toFixed(0)}<span class="unit"> 节</span></div>
                        <div class="details">
                            <div><span>基准VR:</span> <span>${data.base} 节</span></div>
                            <div><span>最大重量:</span> <span>${data.weight} ${data.units}</span></div>
                            <div><span>襟翼修正:</span> <span>${flapCorrections[flap] >= 0 ? '+' : ''}${flapCorrections[flap]} 节</span></div>
                            <div><span>风速修正:</span> <span>${wind * windCorrectionFactor >= 0 ? '+' : ''}${(-wind * windCorrectionFactor).toFixed(1)} 节</span></div>
                        </div>
                    `;
                    
                    resultsContainer.appendChild(card);
                }
                
                // 更新风速显示说明
                const windInfo = document.querySelector('.wind-info');
                if (wind > 0) {
                    windInfo.innerHTML = `<span style="background-color:#d1ecf1; color:#0c5460;">逆风 ${wind} 节</span>`;
                } else if (wind < 0) {
                    windInfo.innerHTML = `<span style="background-color:#f8d7da; color:#721c24;">顺风 ${Math.abs(wind)} 节</span>`;
                } else {
                    windInfo.innerHTML = `<span style="background-color:#e2e3e5; color:#383d41;">无风</span>`;
                }
            }
        });
    </script>
</body>
