    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Base VR speeds for each aircraft (MTOW, flaps 5°, no wind)
            const baseVrSpeeds = {
                '737-600': { base: 138, weight: 65.5, units: 'tons' },
                '737-700': { base: 142, weight: 70.1, units: 'tons' },
                '737-800': { base: 146, weight: 79.0, units: 'tons' },
                '737MAX8': { base: 144, weight: 82.2, units: 'tons' }
            };
            
            // Flap correction factors (relative to flaps 5°)
            const flapCorrections = {
                1: 8,   // VR increases by 8 knots with flaps 1°
                5: 0,   // Flaps 5° is the baseline
                10: -4, // VR decreases by 4 knots with flaps 10°
                15: -8,
                20: -12,
                25: -16,
                30: -20
            };
            
            // Wind correction factor (each knot of headwind reduces VR by 0.1 knots)
            const windCorrectionFactor = 0.1;
            
            // Initial calculation
            calculateVrSpeeds();
            
            // Add event listeners
            document.getElementById('calculate').addEventListener('click', calculateVrSpeeds);
            document.getElementById('wind').addEventListener('input', calculateVrSpeeds);
            document.getElementById('flap').addEventListener('change', calculateVrSpeeds);
            
            function calculateVrSpeeds() {
                // Get user inputs
                const windInput = document.getElementById('wind');
                const wind = parseFloat(windInput.value) || 0;
                
                const flapSelect = document.getElementById('flap');
                const flap = parseInt(flapSelect.value);
                
                // Get results container
                const resultsContainer = document.getElementById('results');
                resultsContainer.innerHTML = '';
                
                // Calculate and display VR speed for each aircraft
                for (const [aircraft, data] of Object.entries(baseVrSpeeds)) {
                    // Base VR speed
                    let vrSpeed = data.base;
                    
                    // Apply flap correction
                    vrSpeed += flapCorrections[flap];
                    
                    // Apply wind correction (headwind reduces VR, tailwind increases VR)
                    vrSpeed -= wind * windCorrectionFactor;
                    
                    // Ensure VR speed doesn't go below minimum
                    vrSpeed = Math.max(vrSpeed, data.base - 25);
                    
                    // Create aircraft card
                    const card = document.createElement('div');
                    card.className = 'aircraft-card';
                    
                    // Set card content
                    card.innerHTML = `
                        <h3>${aircraft}</h3>
                        <div class="vr-speed">${vrSpeed.toFixed(0)}<span class="unit"> knots</span></div>
                        <div class="details">
                            <div><span>Base VR:</span> <span>${data.base} knots</span></div>
                            <div><span>MTOW:</span> <span>${data.weight} ${data.units}</span></div>
                            <div><span>Flap correction:</span> <span>${flapCorrections[flap] >= 0 ? '+' : ''}${flapCorrections[flap]} knots</span></div>
                            <div><span>Wind correction:</span> <span>${wind * windCorrectionFactor >= 0 ? '+' : ''}${(-wind * windCorrectionFactor).toFixed(1)} knots</span></div>
                        </div>
                    `;
                    
                    resultsContainer.appendChild(card);
                }
                
                // Update wind info display
                const windInfo = document.querySelector('.wind-info');
                if (wind > 0) {
                    windInfo.innerHTML = `<span style="background-color:#d1ecf1; color:#0c5460;">Headwind ${wind} knots</span>`;
                } else if (wind < 0) {
                    windInfo.innerHTML = `<span style="background-color:#f8d7da; color:#721c24;">Tailwind ${Math.abs(wind)} knots</span>`;
                } else {
                    windInfo.innerHTML = `<span style="background-color:#e2e3e5; color:#383d41;">No wind</span>`;
                }
            }
        });
    </script>
